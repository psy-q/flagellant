<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" width="<%= @flag.base_layer.width %>" height="<%= @flag.base_layer.height %>">

<% @flag.flag_layers.order("sortorder ASC").each do |layer| %>
  <g class="layer <%= 'base_layer' if layer.is_base_layer? %>" id="flag_layer_<%= layer.id %>">
  <%= render :partial => "flags/layers/#{layer.template_name}.svg.erb", :locals => { :layer => layer } %>
  </g>
<% end %>

</svg>
